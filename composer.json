{
    "name": "gabbydgab/laravel-base",    
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "~7.2.7",
        "barryvdh/laravel-cors": "^v0.11.0",
        "fideloper/proxy": "^4.0.0",
        "jeroennoten/laravel-adminlte": "^v1.23.2",
        "laravel/framework": "^v5.6.29",
        "nwidart/laravel-modules": "^3.3.1",
        "roave/security-advisories": "dev-master",
        "yajra/laravel-datatables-oracle": "^v8.7.1"
    },
    "require-dev": {
        "filp/whoops": "^2.2.0",
        "fzaninotto/faker": "^v1.8.0",
        "laravel/tinker": "^v1.0.7",
        "malukenho/mcbumpface": "^0.1.1",
        "mockery/mockery": "^1.1.0",
        "nunomaduro/collision": "^v1.1.22",
        "phpunit/phpunit": "^7.3.1",
        "sebastian/phpcpd": "^4.0.0",
        "zendframework/zend-coding-standard": "^1.0.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/",
            "CodingMatters\\": "modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "check": [
            "@clear-all",
            "@cs-check",
            "@check-cpd",
            "@test"
        ],
        "clear-all": [
            "php artisan view:clear",
            "php artisan config:clear",
            "php artisan cache:clear"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "check-cpd": "phpcpd --exclude=vendor,public,bootstrap,config --fuzzy app tests database",
        "test": "phpunit --verbose --color=always"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
