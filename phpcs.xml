<?xml version="1.0"?>
<ruleset name="Laminas Coding Standard">
    <description>Laminas coding standard</description>
    <rule ref="./vendor/laminas/laminas-coding-standard/ruleset.xml"/>

    <!-- Paths to check -->
    <file>app</file>
    <file>modules</file>
    <exclude-pattern>tests/*/*Test.php</exclude-pattern>
    <exclude-pattern>modules/*/Database/*</exclude-pattern>
    <exclude-pattern>modules/*/Resources/*</exclude-pattern>
    <exclude-pattern>modules/*/Tests/*</exclude-pattern>
    <exclude-pattern>modules/*/*.json</exclude-pattern>
    <exclude-pattern>modules/*/*.js</exclude-pattern>
    <exclude-pattern>modules/*/Routes/*.php</exclude-pattern>
</ruleset>
